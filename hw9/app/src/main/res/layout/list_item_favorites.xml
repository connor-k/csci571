<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dip"
    tools:context="com.connorkerns.csci571_stocks.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="AAPL"
            android:id="@+id/favoritesSymbol"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_weight="0.3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:paddingRight="24dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$ 109.99"
            android:id="@+id/favoritesChange"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_weight="0.22"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="+0.99%"
            android:id="@+id/favoritesChangePercent"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_green_light" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Apple Inc"
            android:id="@+id/favoritesName"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_weight="0.25"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:paddingRight="8dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Market Cap :"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_weight="0.25"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:textAlignment="viewStart"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="609.80 Billion"
            android:id="@+id/favoritesMarketCap"
            android:textColor="@android:color/black"/>
    </TableRow>
</TableLayout>
